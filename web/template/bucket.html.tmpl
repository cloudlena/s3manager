{{ define "content" }}
<style>
.breadcrumb:before {
    content: '/';
}
#notifications {
    top: 20px;
    right: 30px;
    position: fixed;
    z-index: 2
}
.monospace {
    font-family: monospace !important;
    font-size: 14px !important;
    line-height: 1.5 !important;
    white-space: pre-wrap !important;
    tab-size: 2;
    padding: 8px !important;
